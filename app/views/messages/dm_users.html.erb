<div class container>
    <div class="row mt-4">
        <div class="offset-sm-3 col-sm-6">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>名前</th>
                    <th>アバター画像</th>
                </tr>
                <% @users.each do |user| %>
                <tr>
                    <td><%= link_to user.user_profile.screen_name, messages_path(user.id) %></td>
                    <td><%= image_tag user.user_profile.avatar.variant(:thumb), class: "dm-avatar" if user.user_profile.avatar.attached? %></td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>